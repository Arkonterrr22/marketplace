---
const { products = [] } = Astro.props;
---

<style>
  .product-list {
    display:flex;
    flex-direction: column;
    flex: 1;
    width: 100%;
    max-width: 100%;
    gap: 1rem;
    box-sizing: border-box;
  }

  .product-card {
    display: flex;
    max-width: 100%;
    gap: 1rem;
    padding: 1rem;
    background: #222;
    border-radius: 10px;
    overflow: hidden;
    color: white;
  }

  .product-card img {
    max-width: 100%;
    flex-shrink: 1;
    width: 150px;
    height: 150px;
    object-fit: cover;
    flex-shrink: 0;
    border-radius: 8px;
    background: #333;
  }

  .product-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .product-title {
    font-size: 1.2rem;
    font-weight: bold;
    margin: 0 0 0.5rem;
  }

  .product-desc {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  @media (max-width: 600px) {
    .product-card {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .product-card img {
      width: 100%;
      height: auto;
    }
  }
</style>

<div class="product-list">
  {products.map(product => (
    <div class="product-card">
      <img src={product.image} alt={product.title} loading="lazy" />
      <div class="product-info">
        <h2 class="product-title">{product.title}</h2>
        <p class="product-desc">{product.description}</p>
      </div>
    </div>
  ))}
</div>
